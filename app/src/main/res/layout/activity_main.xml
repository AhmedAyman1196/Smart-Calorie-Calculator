<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.mydomain.myapplication.MainActivity">


    <Button
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="119dp"
        android:onClick="cameraOnclick"
        android:text="@string/use_camera"
        android:textColorHighlight="@color/colorAccent" />

    <Button
        android:id="@+id/choose_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/camera_button"
        android:layout_alignBottom="@+id/camera_button"
        android:layout_marginStart="38dp"
        android:layout_toEndOf="@+id/camera_button"
        android:onClick="chooseOnClick"
        android:text="@string/choose_from_list" />


    <TextView

        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="118dp"
        android:ems="10"
        android:foregroundGravity="fill_vertical"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="0"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calories"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Total Calories"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="InstaCalorie"
        android:textColorLink="@android:color/background_dark"
        android:textSize="30sp" />


</android.widget.RelativeLayout>
